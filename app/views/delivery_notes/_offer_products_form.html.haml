= f.fields_for :deliverynotesproducts do |deliverynoteproduct|        

  #deliveyr-note-products                
    %label.spacer-large            
      = t"products"
      
    .clearfix.list-headers
      .two-sixths
        %label
          = t"product.name"            
      .sixth.packages-quantity
        %label        
          = t"orders.packages_count"
      .sixth
        %label      
          = t"orders.package_size"
      .sixth
        %label      
          = t"unit.title"
      .sixth.package-price
        %label      
          = t"orders.package_price"

    
    .product
      = deliverynoteproduct.fields_for "deliverynoteproduct[#{0}]" do |deliverynoteproduct|
        .row.clearfix
          .two-sixths
            = products_select(deliverynoteproduct, @products, @products.first)

          .sixth.packages-quantity
            = deliverynoteproduct.text_field :packages_quantity, "data-required" => "true"   
            
          .sixth
            = deliverynoteproduct.text_field :packages_size

          .sixth
            = units_select(deliverynoteproduct)

          .sixth.package-price
            = deliverynoteproduct.text_field :package_price, "data-required" => "true"                                              

  .row.clearfix.last
    #add-new-delivery-note-product.circle-button.large
      = "+"