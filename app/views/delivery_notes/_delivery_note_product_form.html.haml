.product
  = deliverynoteproduct.fields_for "deliverynoteproduct[#{0}]" do |deliverynoteproduct|
    .row.clearfix
      .two-sixths
        = products_select(deliverynoteproduct, @products)
      .sixth.packages-quantity      
        = deliverynoteproduct.text_field :packages_quantity, "data-required" => "true"         
      .sixth
        = deliverynoteproduct.text_field :packages_size
      .sixth
        = units_select(deliverynoteproduct)        
      .sixth.package-price
        = deliverynoteproduct.text_field :package_price, "data-required" => "true" 
