- @order_products.each_with_index do |op, index|

  .product.clearfix

    = deliverynoteproduct.fields_for "deliverynoteproduct[#{index}]" do |deliverynoteproduct|

      .fifth
        = products_select(deliverynoteproduct, @products, op.product_id)

      .sixth.packages-quantity
        = deliverynoteproduct.text_field :packages_quantity,  "value" => op.packages_quantity, "data-required" => "true"

      .sixth
        = deliverynoteproduct.text_field :packages_size , "value" => op.packages_size

      .sixth
        = units_select(deliverynoteproduct, op.unit)

      .sixth.package-price.a-r
        = deliverynoteproduct.text_field :package_price,  "value" => op.package_price, "data-required" => "true"

      .sixth
        .ui-selectmenu-button
          = deliverynoteproduct.text_field :expiration_date , "value" => op.expiration_date, :class => "datepicker", data: { date_format: 'YYYY/MM/DD HH:MM:S' }
          %span.ui-icon.ui-icon-triangle-1-s
