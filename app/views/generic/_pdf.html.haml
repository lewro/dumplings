%label
  = t"pdfs"
  
- unless @pdfs.size < 1 
  %table
    - @pdfs.each do |pdf|
      %tr.pdf-file{"data-pdf-id" => pdf.id}
        %td
          = "#"
          = pdf.id        
        %td
          = display_date_time(pdf.created_at)
        %td
          = link_to "#{t'actions.download'}",  { :controller => "file_uploads", :action => "download_pdf", :id => pdf.id }, :target => "_blank", :class => "link-button float-right"
        %td
          .circle-button.small.remove-pdf.float-right{"remove-message" => "#{t'actions.confirm'}" }
            = "x"          

- else
  .no-data
    = t "no_data"