.product

  = retailproduct.fields_for "retailproduct[#{0}]" do |retailproduct|

    .row.clearfix

      .fifth.product-select
        = products_select(retailproduct, @products)

      .sixth.packages-quantity
        = retailproduct.text_field :packages_quantity, "data-required" => "true"

      .sixth.packages-size
        = retailproduct.text_field :packages_size

      .sixth.unit-select
        = units_select(retailproduct)

      .sixth.package-price.a-r
        = retailproduct.text_field :package_price, "data-required" => "true"

      .sixth
        .ui-selectmenu-button
          = retailproduct.text_field :expiration_date , :class => "datepicker", data: { date_format: 'YYYY/MM/DD HH:MM:S' }
          %span.ui-icon.ui-icon-triangle-1-s

