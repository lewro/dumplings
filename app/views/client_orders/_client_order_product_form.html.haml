.product

  = clientorderproduct.fields_for "clientorderproduct[#{0}]" do |clientorderproduct|

    .row.clearfix

      .fifth
        = products_select(clientorderproduct, @products)

      .sixth.packages-quantity
        = clientorderproduct.text_field :packages_quantity, "data-required" => "true"

      .sixth
        = clientorderproduct.text_field :packages_size

      .sixth
        = units_select(clientorderproduct)

      .sixth.package-price.a-r
        = clientorderproduct.text_field :package_price, "data-required" => "true"

      .sixth
        .ui-selectmenu-button
          = clientorderproduct.text_field :expiration_date , :class => "datepicker", data: { date_format: 'YYYY/MM/DD HH:MM:S' }
          %span.ui-icon.ui-icon-triangle-1-s


