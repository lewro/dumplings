- printId = id_format(@client_order.id, @client)

.pdf
    .clearfix
        .half.content.last
            = render :partial => 'generic/pdf/pdf_logo'

        .half.a-r.last.content
            %h1
                = t"orders.client_order"
            .pdf-numbers.clearfix
                %label.a-r
                    = t"orders.id"
                .pdf-primary-number
                    = printId
                .pdf-row
                    %label.a-r
                        = t"offer.reference_id"
                        = ":"
                        = @client_order.reference_id

                = render :partial => 'generic/pdf/pdf_ownership_bank'

                .pdf-row.m-t
                    %label.a-r
                        = t"orders.exp_delivery_date"
                        = ":"
                        = @client_order.expected_delivery

    = render :partial => 'generic/pdf/pdf_client_ownership'

    - if @client.use_tax
        = render :partial => 'generic/pdf/pdf_products_use_tax', :locals => {:@products => @client_order_products}
    - else
        = render :partial => 'generic/pdf/pdf_products_dont_use_tax', :locals => {:@products => @client_order_products}

    .devider

    = render :partial => 'generic/pdf/pdf_payment_conditions'

    .devider

    = render :partial => 'generic/pdf/pdf_signature'








