- current_view = 'stock'
- header = "#{t'stock.problems'}"

= render :partial => 'generic/top', :locals => {:current_view => current_view }
= render :partial => "stock_problems/top", :locals => { :header => header , :current_view =>  current_view  }

= form_for(@stock_supply_reduction) do  |f|
  .page-content.clearfix
    .half-page.left.scroll
      .content
        = f.hidden_field :user_id, :value => current_user.id
        .row.clearfix
          %label
            = t"supply.title"
          = supplies_select(f, @supplies)
        .row.clearfix
          %label
            = t"orders.package_size"
          = f.text_field :packages_size
        .row.clearfix
          %label
            = t"unit.title"
          = units_select(f)
        .row.clearfix
          %label
            = t"reason"
          = f.text_area :reason

  .action-cover.clearfix
    = f.submit "#{t'actions.save'}", :class => "button"
