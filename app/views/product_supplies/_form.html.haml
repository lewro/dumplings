= form_for(@product_supply) do  |f|

  = f.hidden_field :user_id, :value => current_user.id
  = f.hidden_field :product_id, :value => @product.id

  .product.clearfix.list-headers
    .row.clearfix
      %label
        = t"supplies"
      = supplies_select(f, @supplies)

    .row.clearfix
      .half
        %label
          = t"orders.package_size"
          = f.text_field :packages_size
      .half.last
        %label
          = t"unit.title"
        = units_select(f)

    .clearfix
      = f.submit "#{t'actions.create'}", :class => "button float-right spacer-medium"
