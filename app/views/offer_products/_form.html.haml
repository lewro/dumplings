= form_for(@offer_product) do  |f|  

  = f.hidden_field :offer_id, :value => @id
  = f.hidden_field :user_id, :value => current_user.id
    
  .product.clearfix.list-headers
    .two-sevenths
      %label
        = t"product.name" 
      = products_select(f, @products)
    .seventh.packages-quantity
      %label        
        = t"orders.packages_count"
      = f.text_field :packages_quantity, "data-required" => "true"   
    .seventh
      %label      
        = t"orders.package_size"
        = f.text_field :packages_size
    .seventh
      %label      
        = t"unit.title"
      = units_select(f)
    .seventh.package-price
      %label      
        = t"orders.package_price"
      = f.text_field :package_price, "data-required" => "true"      
    .seventh
      %label
        = " "
      = f.submit "#{t'actions.create'}", :class => "button float-right spacer-medium"