%head
	%title Little Factory
	%meta{:charset => "utf-8"}/
	%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
	= csrf_meta_tags

	:css
		body {
			font-family: "Helvetica Neue", Helvetica, Arial;
			line-height: 1.5em;
			margin: 0px;
			padding: 0px;
		}

		h1 {
			font-size: 30px;
			padding-bottom: 30px;
			font-family: "DIN Pro", DIN, Oswald;
			line-height: 1.5em;
			margin: 0;
		}

		.clearfix:before,
		.clearfix:after {
			content: " "; /* 1 */
			display: table; /* 2 */
		}

		.clearfix:after {
			clear: both;
		}
		.logo,
		.signature {
			max-width: 250px;
		}
		.pdf {
			border: 1px dotted #ddd;
			font-weight: 100;
			font-size: 13px;
		}

		.pdf-section {
			margin-top: 30px;
		}

		.pdf-values {
			margin-top: 20px;
			font-size: 11px;
		}

		.pdf-numbers label {
			color: #333;
		}

		.pdf-primary-number {
			font-weight: 100;
			font-size: 50px;
			font-family: "DIN Pro", DIN, Oswald;
			line-height: 1.5em;
			color: #666;
		}	
		.pdf-table {
			padding: 0 30px;
		}
		.pdf-table th {
			font-size: 9px;
			line-height: 1.2em;
			background: #333;
			color: #fff;
			padding: 5px 10px !important;
		}

		.pdf-table tr {
			border-bottom: 1px dotted #ddd;
		}

		.pdf-table td {
			background: #fff;
			line-height: 1.2em;
		}

		.pdf-table td, 
		.pdf-table th {
			width: 13%;
		}

		.pdf-table td.name,
		.pdf-table th.name {
			width: 31%;
		}

		.totals {
			margin-top: 20px;
			float: right;
			width: 50%;
			font-size: 11px;
			text-transform: uppercase;
		}
		.totals .total-header,
		.totals .total-sum {
			float: left;
			width: 50%;
		}	
		.totals .total-sum {
			text-align: right;			
		}
		.totals .final {
			font-weight: bold;
		}
		.pdf-footer {
			font-size: 11px;
			line-height: 2em;
		}	
		.a-r {
			text-align: right;
		}
		.m-t {
			margin-top: 20px;
		}
		.b-l {
			border-left: 1px dotted #ddd; 
		}
		.half {
			width: 48% !important;
			margin-right: 2%;
			float: left;  
			box-sizing: border-box;
		}
		.half.last {
			width: 50% !important;
			margin-right: 0% !important;
		}
		.content {
			padding: 30px;
		}
		.devider {
			border-top: 1px dotted #ddd;
			margin: 10px 0;
		}
		table {
			border-collapse: collapse;
			border-spacing: 0;
			border: 1px solid #333;			
			background: #f9f9f9;
		}
		td,
		th {
			padding: 0;
		}
		table {
		 width: 100%;
		}
		th {
			font-weight: 100;
			text-transform: uppercase;
			text-align: left;
			padding: 10px 10px 20px 10px;
		}
		td {
			font-size: 11px;
			font-weight: 100;  
			padding: 10px; 
		}
		thead {display: table-row-group;}
		label {
			font-weight: 100;
			font-size: 11px;
			text-transform: uppercase;
			color: #999;
			text-align: left;  
			display: block;
		}		

%body
	= yield