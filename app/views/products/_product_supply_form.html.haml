.product
  = productsupply.fields_for "productsupply[#{0}]" do |productsupply|
    .row.clearfix
      .two-sixths
        = supplies_select(productsupply, @supplies)
      .sixth.packages-quantity      
        = productsupply.text_field :packages_quantity, "data-required" => "true"         
      .sixth
        = productsupply.text_field :packages_size
      .sixth
        = units_select(productsupply)        
      .sixth.package-price
        = productsupply.text_field :package_price, "data-required" => "true" 
