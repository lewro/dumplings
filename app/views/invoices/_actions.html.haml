.button-cover.clearfix  

  - unless @invoice.order_id.nil?
    = link_to "#{t'order'} →", {:controller => :client_orders, :action => :edit, :id => @invoice.order_id}, :class => "link-button float-right"

  - unless @delivery_note.nil?
    = link_to "#{t'delivery_note.title'} →", {:controller => :delivery_notes, :action => :edit, :id => @delivery_note.id}, :class => "link-button float-right"  

  - unless @proforma.nil?
    - unless @invoice == @proforma
      = link_to "#{t'invoice.proforma'} →", {:controller => :invoices, :action => :edit, :id => @proforma.id, :proforma => true}, :class => "link-button float-right"

  - if @invoice.proforma
    - if @invoice_link
      = link_to "#{t'invoice.title'} →", {:controller => :invoices, :action => :edit, :id => @invoice_link.id}, :class => "link-button float-right"
    - else
      - if params[:action] != "new"
        = link_to "+ #{t'invoice.title'}", {:controller => :invoices, :action => :new, :id => @invoice.order_id}, :class => "link-button float-right"