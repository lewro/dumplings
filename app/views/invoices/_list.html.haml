.page-content.clearfix
  .content
    %table
      = render :partial => "invoices/list_headers"
      - @invoices.each do |invoice|
        %tr.data{"data-invoice-id" => invoice.id, "data-just-now" => "#{t'invoice.just_now'}", "data-link" => "/invoices/#{invoice.id}/edit"}
          %td
            = invoice.id
          %td
            = invoice.client_name
          %td.currency
            = number_to_currency(invoice.sum, :unit => "")

          - if invoice.balance.nil? 
            - @balance  = 0 - invoice.sum
          - else
            - @balance  = invoice.balance - invoice.sum

          - @class = balance_class(@balance)        
    
          %td.invoice_balance.currency{:class => @class}
            = number_to_currency(@balance, :unit => "")
          %td
            - unless invoice.due_date.nil?
              = display_date(invoice.due_date)
          %td.invoice_paid_date
            - unless invoice.paid_date.nil?
              = display_date(invoice.paid_date)
            - else
              .link-button.float-right.mark-invoice-as-paid
                = t'invoice.mark_as_paid'
        