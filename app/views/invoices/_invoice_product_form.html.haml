.product
  = invoiceproduct.fields_for "invoiceproduct[#{0}]" do |invoiceproduct|
    .row.clearfix
      .two-sixths
        = products_select(invoiceproduct, @products)
      .sixth.packages-quantity      
        = invoiceproduct.text_field :packages_quantity, "data-required" => "true"         
      .sixth
        = invoiceproduct.text_field :packages_size
      .sixth
        = units_select(invoiceproduct)        
      .sixth.package-price
        = invoiceproduct.text_field :package_price, "data-required" => "true" 
