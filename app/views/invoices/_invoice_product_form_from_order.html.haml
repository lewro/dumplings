- @order_products.each_with_index do |ip, index|
  .product.clearfix
    = invoiceproduct.fields_for "invoiceproduct[#{index}]" do |invoiceproduct|
      .two-sixths
        = products_select(invoiceproduct, @products, ip.product_id)
      .sixth.packages-quantity
        = invoiceproduct.text_field :packages_quantity,  "value" => ip.packages_quantity, "data-required" => "true"   
      .sixth
        = invoiceproduct.text_field :packages_size , "value" => ip.packages_size
      .sixth
        = units_select(invoiceproduct, ip.unit)        
      .sixth.package-price
        = invoiceproduct.text_field :package_price,  "value" => ip.package_price, "data-required" => "true" 
