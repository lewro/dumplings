.pdf
    .clearfix
        .half.content.last
            = render :partial => 'generic/pdf/pdf_logo'
        .half.a-r.last.content
            %h1
                = t"orders.supplier_order"
            .pdf-numbers.clearfix
                %label.a-r
                    = t"orders.id"
                .pdf-primary-number
                    = @supplier_order.id

                .pdf-row.m-t
                    .a-r
                        = display_date(Date.today)

    = render :partial => 'generic/pdf/pdf_client_ownership'

    .clearfix.pdf-table
        %table
            %thead
                %tr
                    %th.name
                        = t"product.name"
                    %th
                        = t"product.code"
                    %th
                        = t"orders.packages_count"
                    %th
                        = t"orders.package_size"
                        = "/"
                        = t"unit.title"
                    %th
                        = t"orders.package_price"

            %tbody
                - @supplier_order_products.each do |op|
                    %tr
                        %td.name
                            = op.name
                        %td
                            = op.product_code
                        %td
                            = op.packages_quantity
                        %td
                            = op.packages_size
                            = " "
                            = unit(op.unit)
                        %td
                            = op.package_price

    .devider

    = render :partial => 'generic/pdf/pdf_signature'






